<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5F9F9F9"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <include layout="@layout/main_screen_tab_space" />

        <ImageView
            android:id="@+id/tasks"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/menu_tasks_unselected"
            />

        <include layout="@layout/main_screen_tab_space" />

        <ImageView
            android:id="@+id/progress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/menu_projects_unselected"

            />

        <include layout="@layout/main_screen_tab_space" />

        <ImageView
            android:id="@+id/create"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/menu_create_unselected"
            />

        <include layout="@layout/main_screen_tab_space" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/menu_events_unselected"

            />

        <include layout="@layout/main_screen_tab_space" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/menu_profile_unselected"
            android:padding="12dp"
            />

        <include layout="@layout/main_screen_tab_space" />

    </LinearLayout>

</LinearLayout>