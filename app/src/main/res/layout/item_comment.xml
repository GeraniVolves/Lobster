<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/commentator_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="David Tramp VERY VERY VERY VERY VERY LONG NAME"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8A8A8F"
            android:textSize="12sp"
            tools:text="5m"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="45dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        tools:text="Last month, my wife, Anne Doe, took me to Las Vegas because she had to go for a business convention. Last month, my wife, Anne Doe, took me to Las Vegas because she had to go for a business convâ€¦"
        />

    <ImageView
        android:id="@+id/commentator_avatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_avatar_list"
        />

</FrameLayout>