<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/several_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_task"
        android:layout_alignTop="@+id/image_task"
        android:background="@drawable/task_bg"
        />

    <LinearLayout
        android:id="@+id/image_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/files_task"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_detail_tasks"
            />

    </LinearLayout>

</RelativeLayout>